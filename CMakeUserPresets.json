{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21
	},
	"configurePresets": [
		{
			"name": "web",
			"displayName": "Emscripten",
			"binaryDir": "build",
			"generator": "Ninja Multi-Config",
			"toolchainFile": "emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake"
		},
		{
			"name": "default",
			"displayName": "Desktop",
			"binaryDir": "build",
			"generator": "Ninja Multi-Config"
		},
		{
			"name": "iOS-sim",
			"displayName": "iOS Simulator",
			"binaryDir": "build",
			"generator": "Xcode",
			"cacheVariables": {
				"CMAKE_SYSTEM_NAME": "iOS",
				"CMAKE_OSX_SYSROOT": "iphonesimulator"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			}
		},
		{
			"name": "iOS",
			"displayName": "iOS",
			"binaryDir": "build",
			"generator": "Xcode",
			"cacheVariables": {
				"CMAKE_SYSTEM_NAME": "iOS",
				"CMAKE_OSX_SYSROOT": "iphoneos"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			}
		}
	],
	"buildPresets": [
		{
			"name": "Debug",
			"configurePreset": "default",
			"configuration": "Debug"
		},
		{
			"name": "Release",
			"configurePreset": "default",
			"configuration": "Release"
		}
	]
}